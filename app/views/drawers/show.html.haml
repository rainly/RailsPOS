- title "Drawer"

%p
  %strong Drawer ID:
  =h @drawer.id
%p
  %strong Opened By:
  =h @drawer.user.username
%p
  %strong Closed At:
  - if @drawer.closed_at.blank?
    =h "Open Drawer"
  -else
    =h @drawer.closed_at
%p
  %strong Tabs:
  = link_to @drawer.tabs.count, drawer_tabs_path(@drawer)

%p
  = link_to "Edit", edit_drawer_path(@drawer)
  |
  = link_to "Destroy", @drawer, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", drawers_path
