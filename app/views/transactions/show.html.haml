- title "Transaction"

%p
  %strong Type:
  =h @transaction.type
%p
  %strong Amount:
  =h number_to_currency @transaction.amount
%p
  %strong Cashier:
  =h @transaction.user.username
%p
  %strong Tab:
  =h @transaction.tab.name

%p
  = link_to "Edit", edit_transaction_path(@transaction)
  |
  = link_to "Destroy", transaction_path, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", transactions_path
